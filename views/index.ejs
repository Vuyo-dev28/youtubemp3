<body>
    <div class="top-container">
        <form id="form">
            <p>by <a href="https://www.linkedin.com/in/sarthak-s-b622b022a/" target="_blank">sarthakvs</a></p>
            <h1><i class="fa-brands fa-youtube"></i> Youtube to MP3 Magic</h1>
            <h4>Enter Video URL</h4>
            <div class="input-row">
                <input type="text" id="video-url" placeholder="Video goes here">
                <button type="submit" id="convert-btn">Convert!</button>
            </div>
            <div>
                <p><b>Please wait 20-30 seconds after clicking Convert</b></p>
                <p id="status-message"></p>
            </div>
        </form>

        <!-- Download button placeholder -->
        <div id="download-section" style="display:none; margin-top:20px;">
            <p id="song-title"></p>
            <a id="download-btn" href="" download>Click here to Download MP3</a>
        </div>
    </div>

<script>
    const form = document.getElementById('form');
    const videoUrlInput = document.getElementById('video-url');
    const downloadSection = document.getElementById('download-section');
    const downloadBtn = document.getElementById('download-btn');
    const songTitle = document.getElementById('song-title');
    const statusMessage = document.getElementById('status-message');
    const convertBtn = document.getElementById('convert-btn');

    form.addEventListener('submit', async (e) => {
        e.preventDefault();

        // Disable button to prevent multiple requests
        convertBtn.disabled = true;
        convertBtn.textContent = "Processing...";

        downloadSection.style.display = 'none';
        statusMessage.textContent = "Processing your request...";
        const videoURL = videoUrlInput.value.trim();

        try {
            const response = await fetch('/convert-mp3', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ url: videoURL })
            });
            const result = await response.json();

            if(result.success){
                songTitle.textContent = result.title;
                downloadBtn.href = result.link;
                downloadSection.style.display = 'block';
                statusMessage.textContent = "Your MP3 is ready!";
            } else {
                statusMessage.textContent = result.message || "Something went wrong";
            }
        } catch (err) {
            statusMessage.textContent = "Network error or API failed.";
            console.log(err);
        } finally {
            // Re-enable button after response
            convertBtn.disabled = false;
            convertBtn.textContent = "Convert!";
        }
    });
</script>
</body>
</html>
